    "istanbul-coverage": "nyc --reporter=html mocha seleniumTest.js",
    "single": "./node_modules/.bin/mocha seleniumTest.js"
  },
  "dependencies": {
    "save": "^2.4.0",
    "selenium-webdriver": "^4.0.0"
